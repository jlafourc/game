<%= simple_form_for(@rencontre) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.association :equipe, collection: Equipe.where("saison_id = ?", saison_courante.id) %>
	<%= f.association :adversaire, :as => :grouped_select, :collection => Equipe.where("saison_id = ?", saison_courante.id), :group_method => :adversaires %>
	<%= f.input :jour %>
    <%= f.input :heure, :as => :time, :include_blank => true, :minute_step => 15 %>
    <%= f.input :domicile %>
    <%= f.input :exempt %>
    <%= f.input :reportee %>
    <%= f.input :numero %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
